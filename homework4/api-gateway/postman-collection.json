{
  "info": {
    "name": "E-commerce Microservices API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Orders Service",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "http://localhost/api/orders",
            "body": {
              "mode": "raw",
              "raw": "{\"user_id\":\"user123\",\"amount\":999.99,\"description\":\"Ноутбук\"}"
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "url": "http://localhost/api/orders?user_id=user123"
          }
        },
        {
          "name": "Get Order Status",
          "request": {
            "method": "GET",
            "url": "http://localhost/api/orders/123"
          }
        }
      ]
    },
    {
      "name": "Payments Service",
      "item": [
        {
          "name": "Create Account",
          "request": {
            "method": "POST",
            "url": "http://localhost/api/accounts",
            "body": {
              "mode": "raw",
              "raw": "{\"user_id\":\"user123\"}"
            }
          }
        },
        {
          "name": "Deposit",
          "request": {
            "method": "POST",
            "url": "http://localhost/api/accounts/user123/deposit",
            "body": {
              "mode": "raw",
              "raw": "{\"amount\":1500}"
            }
          }
        },
        {
          "name": "Get Balance",
          "request": {
            "method": "GET",
            "url": "http://localhost/api/accounts/user123/balance"
          }
        }
      ]
    }
  ]
}